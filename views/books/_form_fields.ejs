<div>
  <label for="title">Title</label>
  <input type="text" name="title" value="<%= locals.book.title %>" />
</div>
<div>
  <label for="author">Author</label>
  <select name="author">
    <% locals.authors.forEach(author => { %> <% if(author.id === book.author){
    %>
    <option
      selected
      label="<%= author.name %>"
      value="<%= author.id %>"
    ></option>
    <% }else{ %>
    <option
      selected
      label="<%= author.name %>"
      value="<%= author.id %>"
    ></option>
    <% } %> <% }) %>
  </select>
</div>

<div>
  <label for="publishDate">Publish Date</label>
  <input
    type="date"
    name="publishDate"
    value="<%= locals.book.publishDate == null ? '':locals.book.publishDate.toISOString().split('T')[0] %>"
  />
</div>

<div>
  <label for="pageCount">Page Count</label>
  <input
    type="number"
    name="pageCount"
    min="1"
    value="<%= locals.book.pageCount%>"
  />
</div>

<div>
  <label for="cover">Cover</label>
  <input type="file" name="cover" class = "filepond"/>
</div>


<div>
  <label for="description">Description</label>
  <textarea name="description" /><%= book.description%></textarea>
</div>